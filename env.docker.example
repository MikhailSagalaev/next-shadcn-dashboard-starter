# Runtime
NODE_ENV=development
PORT=5006
NEXT_PUBLIC_APP_URL=http://localhost:5006
NEXTAUTH_URL=http://localhost:5006

# Database (docker-compose.yml)
DATABASE_URL=postgresql://bonus_user:bonus_password@localhost:5433/bonus_system?schema=public

# Redis (dev without password)
REDIS_URL=redis://localhost:6379

# Auth (JWT)
JWT_SECRET=dev-secret-change-me
NEXT_PUBLIC_SIGN_IN_URL=/auth/sign-in
NEXT_PUBLIC_AFTER_SIGN_IN_URL=/dashboard

# Security
NEXTAUTH_SECRET=change-me-32-characters
CRON_SECRET=change-me-hex-16

# Grafana + Loki (Monitoring)
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key_here
LOKI_URL=http://localhost:3100

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@localhost
