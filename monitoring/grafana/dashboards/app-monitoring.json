{
  "dashboard": {
    "id": null,
    "title": "SaaS Bonus System - App Monitoring",
    "tags": ["saas", "bonus", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {},
    "panels": [
      {
        "id": 1,
        "title": "Errors by Level",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "count_over_time({job=\"saas-bonus-app\",level=\"error\"}[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "Recent Errors",
        "type": "logs",
        "gridPos": {
          "h": 10,
          "w": 18,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "{job=\"saas-bonus-app\",level=\"error\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Log Volume",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate({job=\"saas-bonus-app\"}[5m])",
            "refId": "A",
            "legendFormat": "Logs/sec"
          }
        ]
      },
      {
        "id": 4,
        "title": "Errors by Source",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (source) (count_over_time({job=\"saas-bonus-app\",level=\"error\"}[5m]))",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
