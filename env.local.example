# =================================================================
# ЛОКАЛЬНАЯ РАЗРАБОТКА - SaaS Bonus System
# =================================================================

# Окружение
NODE_ENV=development
PORT=5006

# Публичный адрес для локальной разработки
NEXT_PUBLIC_APP_URL=http://localhost:5006
WEBHOOK_BASE_URL=http://localhost:5006

# База данных (локальная PostgreSQL)
DATABASE_URL="postgresql://bonus_admin:bonus_password_123@127.0.0.1:5440/bonus_system?schema=public"

# Redis (локальный)
REDIS_URL="redis://:Ro4UV2BT6ZAEFsSo5a@127.0.0.1:6379"

# JWT секреты (для локальной разработки)
JWT_SECRET=local_dev_jwt_secret_key_for_development_only
NEXTAUTH_SECRET=local_dev_nextauth_secret_key_for_development_only
CRON_SECRET=local_dev_cron_secret_key_for_development_only

# Логирование
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGS=true

# =================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ
# =================================================================

# Grafana + Loki (мониторинг ошибок)
# Self-hosted monitoring solution for error tracking and logs
# See docs/grafana-loki-setup.md for setup instructions
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key_here
LOKI_URL=http://localhost:3100

# Telegram Bot API (если нужен кастомный сервер)
# TELEGRAM_API_URL=https://api.telegram.org

# Email провайдер - Resend (https://resend.com)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Альтернативный вариант - SMTP (если не используете Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@localhost

# Rate Limiting (более мягкие лимиты для разработки)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000
